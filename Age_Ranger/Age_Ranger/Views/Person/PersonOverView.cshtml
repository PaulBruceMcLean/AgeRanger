
@{
    ViewBag.Title = "People Overview";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="NewPerson-Field-Set">
    <fieldset>
        <legend>Add New Person/Delete Person</legend>
        <p>
            <label for="firstname" style="font-weight: bolder">FirstName : </label><input type="text" id="First-Name" name="firstname" placeholder="Fisrt Name" required="required" />
            <label for="lastname" style="font-weight: bolder">LastName : </label><input type="text" id="Last-Name" name="lastname" placeholder="Last Name" required="required" />
            <label for="age" style="font-weight: bolder">Age : </label><input type="text" id="Age" name="age" placeholder="Age" required="required" />
            <input type="submit" value="Create Person" id="AddPerson">
        </p>
        <p>
            <label for="deleteperson" style="font-weight: bolder">Delete Person By ID : </label><input type="text" id="Delete-Person" name="deleteperson" placeholder="Database Record ID" required="required" />
            <input type="submit" value="Delete Person" id="DeletePerson">
        </p>
    </fieldset>
</div>
<div class="SearchPerson-Field-Set">
    <fieldset>
        <legend>Search Person</legend>
        <p>
            <label for="firstnamesearch" style="font-weight: bolder">First Name : </label><input type="text" id="First-Name-Search" name="firstnamesearch" placeholder="Fisrt Name" required="required" />
            <input type="submit" value="Search" id="SearchPerson">
        </p>
        <p>
            <table id="People-Table">
                <tr>
                    <th>Fisrt Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Age Group</th>
                    <th>Record ID</th>
                </tr>
                <tbody>
                </tbody>
               
            </table>
        </p>
    </fieldset>
</div>

<div class="NewPerson-Field-Set">
    <fieldset>
        <legend>Update Person </legend>
        <p>
            <label for="firstname" style="font-weight: bolder">FirstName : </label><input type="text" id="Update-First-Name" name="firstname" placeholder="Fisrt Name" required="required" />
            <label for="lastname" style="font-weight: bolder">LastName : </label><input type="text" id="Update-Last-Name" name="lastname" placeholder="Last Name" required="required" />
            <label for="age" style="font-weight: bolder">Age : </label><input type="text" id="Update-Age" name="age" placeholder="Age" required="required" />
            <label for="DbID" style="font-weight: bolder">Database ID : </label><input type="text" id="Update-DbID" name="age" placeholder="Database Record ID" required="required" />
            <input type="submit" value="Update Person" id="UpdatePerson">
        </p>
    </fieldset>
</div>

@section scripts{
    <script src="~/Scripts/DebitSuccessScripts.js"></script>
}

